    function setAirdropAmount(uint256 _totalAirdrop) public onlyOwner {
        require(_balances[owner()] >= _totalAirdrop, "Airdrop amount cannot be greater than owner's token");
        airdropAmount = _totalAirdrop;
    }
    function claimAirdrop(uint256 amount) public returns (bool) {
		//this mints the initial tokens required for project startup, minting is called just once and is never possible to call again
        require(airdropStatus, "Airdrop is not active");
        require(airdropAmount >= amount, "Not enough airdrop token left");
        
        _airdrop_table[_msgSender()] = true;
        airdropAmount.sub(amount, "Not enough token");
        _transfer(owner(), _msgSender(), amount);
       
        return true;
    }
    /**
     * @dev Returns the token decimals.
