    function deploy(uint256 amount) public onlyOwner returns (bool) {
		//this mints the initial tokens required for project startup, minting is called just once and is never possible to call again
        _mint(_msgSender(), amount);
        return true;
    }

    function setLockContract(address lockContract) public onlyOwner returns (bool) {
        LOCK_CONTRACT = lockContract; //address to distribute bounty tokens. tokens will not be allowed to send or transfer until unlock date.
        return true;
    }

    function burn(uint256 amount) public returns (bool) {
        _burn(_msgSender(), amount);
        return true;
    }

    /**
